<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardforclickingondetailpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        android:background="@drawable/rectanngleshap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/rlforencryptedlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="10dp"

            >


            <ImageView
                android:id="@+id/ivencryptedtextimage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textencrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Encryption"
                android:textSize="18sp"
                android:textColor="@color/color_grey"
                android:layout_marginTop="110dp"
                android:textAlignment="textStart"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="start"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llbutton"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/ivencryptedtextimage"
                android:orientation="horizontal"

                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectanngleshap"
                    android:padding="10dp"
                    android:text="@string/share_image"
                    android:layout_marginRight="30dp" />

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectanngleshap"
                    android:padding="10dp"
                    android:text="@string/delete_image"
                    android:layout_marginRight="20dp" />


                <!--        android:onClick="Encryption"-->
            </LinearLayout>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>